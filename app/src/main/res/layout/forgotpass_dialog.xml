<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/forblankcircle" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/fp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/forbody">

        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/ExSendEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:ael_duration="300"
            app:ael_expanded="true"
            app:ael_interpolator="linear">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <com.linkzone.linkzoneapp.widget.MyBoldTextView
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:gravity="center_horizontal"
                    android:text="Enter Your Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <com.linkzone.linkzoneapp.widget.MyEditText
                    android:id="@+id/EnterEmail"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Enter Email"
                    android:paddingLeft="10dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/noutline"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <com.linkzone.linkzoneapp.widget.RippleView
                    android:layout_marginTop="20dp"
                    android:id="@+id/SendEmail"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    app:rv_rippleDuration="200"
                    app:rv_zoom="true"
                    app:rv_centered="true"
                    android:background="@drawable/button_selector2">

                    <com.linkzone.linkzoneapp.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Request OTP"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"/>

                </com.linkzone.linkzoneapp.widget.RippleView>

            </LinearLayout>

        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/ExSendPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:ael_duration="300"
            app:ael_expanded="false"
            app:ael_interpolator="linear">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <com.linkzone.linkzoneapp.widget.MyBoldTextView
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:gravity="center_horizontal"
                    android:text="Enter Your Six Digit Secret Code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.linkzone.linkzoneapp.widget.MyEditText
                    android:id="@+id/EnterOTP"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Enter OTP"
                    android:paddingLeft="10dp"
                    android:inputType="numberPassword"
                    android:background="@drawable/noutline"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <com.linkzone.linkzoneapp.widget.RippleView
                    android:layout_marginTop="20dp"
                    android:id="@+id/ValidOTP"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    app:rv_rippleDuration="200"
                    app:rv_zoom="true"
                    app:rv_centered="true"
                    android:background="@drawable/button_selector2">

                    <com.linkzone.linkzoneapp.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Check"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"/>

                </com.linkzone.linkzoneapp.widget.RippleView>

            </LinearLayout>

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>

        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/ExSendedEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:ael_duration="300"
            app:ael_expanded="false"
            app:ael_interpolator="linear">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <com.linkzone.linkzoneapp.widget.MyBoldTextView
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:gravity="center_horizontal"
                    android:text="Change Your Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <com.linkzone.linkzoneapp.widget.MyEditText
                    android:id="@+id/ExSendedEmailtxt"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Enter Email"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/noutline"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <com.linkzone.linkzoneapp.widget.MyEditText
                    android:id="@+id/ExEnterPass"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Enter New Password"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:background="@drawable/noutline"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

                <com.linkzone.linkzoneapp.widget.RippleView
                    android:layout_marginTop="20dp"
                    android:id="@+id/ChangePassword"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    app:rv_rippleDuration="200"
                    app:rv_zoom="true"
                    app:rv_centered="true"
                    android:background="@drawable/button_selector2">

                    <com.linkzone.linkzoneapp.widget.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Change Password"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"/>

                </com.linkzone.linkzoneapp.widget.RippleView>

            </LinearLayout>

        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="66dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/White" />


</RelativeLayout>
